{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^@test/(.*)$": "<rootDir>/test/$1"
  },
  "testRegex": "../.*\\.spec\\.ts$",
  "modulePathIgnorePatterns": ["./matchers"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../../coverage",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/test/global-setup.ts"]
}
