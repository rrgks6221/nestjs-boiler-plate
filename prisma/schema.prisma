generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model EventStore {
  id           BigInt   @id
  actorId      BigInt?  @map("user_id")
  aggregate    String   @db.VarChar(20)
  aggregateId  BigInt   @map("aggregate_id")
  eventName    String   @map("event_name")
  eventPayload Json     @map("event_payload")
  version      Int
  occurredAt   DateTime @map("occurred")
  storedAt     DateTime @default(now()) @map("created_at") @db.Timestamp(3)

  @@unique([aggregateId, version])
  @@map("event_store")
}

enum SignInType {
  username
}

model UserModel {
  id BigInt @id

  signInType SignInType @map("sign_in_type")
  username   String     @unique @db.VarChar(20)
  password   String

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamp(3)

  @@map("users")
}
